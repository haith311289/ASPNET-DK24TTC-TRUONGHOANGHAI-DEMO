@model WebBanNuocGiaiKhat.Models.KhachHang

@{
    ViewData["Title"] = "Chỉnh sửa khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Chỉnh sửa thông tin khách hàng</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="MaKh" />
                        <input type="hidden" asp-for="CreateDate" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="TenKh" class="form-control-label">Họ tên</label>
                                    <input asp-for="TenKh" class="form-control" />
                                    <span asp-validation-for="TenKh" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="form-control-label">Email</label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Phone" class="form-control-label">Số điện thoại</label>
                                    <input asp-for="Phone" class="form-control" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="GioiTinh" class="form-control-label">Giới tính</label>
                                    <select asp-for="GioiTinh" class="form-control">
                                        <option value="Nam">Nam</option>
                                        <option value="Nữ">Nữ</option>
                                    </select>
                                    <span asp-validation-for="GioiTinh" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Ngaysinh" class="form-control-label">Ngày sinh</label>
                                    <input asp-for="Ngaysinh" type="date" class="form-control" />
                                    <span asp-validation-for="Ngaysinh" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Diachi" class="form-control-label">Địa chỉ</label>
                                    <input asp-for="Diachi" class="form-control" />
                                    <span asp-validation-for="Diachi" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label">Avatar hiện tại</label>
                                    @if (!string.IsNullOrEmpty(Model.AvatarKh))
                                    {
                                        <div>
                                            <img src="~/images/customers/@Model.AvatarKh" alt="Avatar" class="avatar" style="width: 100px; height: 100px; object-fit: cover; border-radius: 50%;" />
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-sm text-secondary">Chưa có avatar</p>
                                    }
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label">Thay đổi Avatar</label>
                                    <input type="file" name="fAvatar" class="form-control" accept="image/*" />
                                    <small class="text-muted">Chọn ảnh mới nếu muốn thay đổi avatar</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Password" class="form-control-label">Mật khẩu</label>
                                    <input asp-for="Password" type="password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <small class="text-muted">Để trống nếu không muốn thay đổi mật khẩu</small>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
