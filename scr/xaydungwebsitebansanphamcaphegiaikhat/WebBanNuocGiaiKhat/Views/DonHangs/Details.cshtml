@model WebBanNuocGiaiKhat.Models.DonHang

@{
    ViewData["Title"] = "Chi Tiết Đơn Hàng #" + Model.MaDh;
}

<!-- Breadcrumb -->
<div class="py-3" style="background: var(--light-bg);">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-action="UserDashboard" asp-controller="Home">Tài khoản</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="DonHangs">Lịch sử đơn hàng</a></li>
                <li class="breadcrumb-item active">Chi tiết đơn hàng #@Model.MaDh</li>
            </ol>
        </nav>
    </div>
</div>

<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <!-- Order Info -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-3 mb-4">
                    <div class="card-header bg-white border-bottom py-3 d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold">Đơn Hàng #@Model.MaDh</h5>
                        <span class="text-muted small"><i class='bx bx-calendar'></i> @Model.NgayTao.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-borderless mb-0 align-middle">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4 py-3">Sản Phẩm</th>
                                        <th class="text-center py-3">Số Lượng</th>
                                        <th class="text-end pe-4 py-3">Thành Tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ChiTietDonHangs)
                                    {
                                        <tr class="border-bottom">
                                            <td class="ps-4 py-3">
                                                <div class="d-flex align-items-center">
                                                    <div class="flex-shrink-0 bg-light rounded p-2" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                                                        <img src="@item.MaSpNavigation.AnhSp" alt="@item.MaSpNavigation.TenSp" class="img-fluid" style="max-height: 100%;">
                                                    </div>
                                                    <div class="ms-3">
                                                        <h6 class="mb-0 fw-bold text-dark">@item.MaSpNavigation.TenSp</h6>
                                                        <small class="text-muted">Đơn giá: @item.MaSpNavigation.GiaSp.ToString("#,##0") VNĐ</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center py-3">x @item.SoLuong</td>
                                            <td class="text-end pe-4 py-3 fw-bold text-primary">@item.TongTien.ToString("#,##0") VNĐ</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="bg-light">
                                    <tr>
                                        <td colspan="2" class="text-end py-2">Tạm tính:</td>
                                        <td class="text-end pe-4 py-2 fw-bold">@Model.TongTien.ToString("#,##0") VNĐ</td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" class="text-end py-2">Phí vận chuyển:</td>
                                        <td class="text-end pe-4 py-2">Miễn phí</td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" class="text-end py-3 fs-5 fw-bold text-dark">Tổng cộng:</td>
                                        <td class="text-end pe-4 py-3 fs-5 fw-bold text-danger">@Model.TongTien.ToString("#,##0") VNĐ</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                
                <div class="text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class='bx bx-arrow-back'></i> Quay lại
                    </a>
                    @if (!Model.TrangThaiHuyDon && !Model.ThanhToan)
                    {
                        <!-- Có thể thêm nút Hủy đơn hàng ở đây nếu cần -->
                    }
                </div>
            </div>

            <!-- Sidebar Info -->
            <div class="col-lg-4">
                <!-- Customer Info -->
                <div class="card border-0 shadow-sm rounded-3 mb-4">
                    <div class="card-header bg-white border-bottom py-3">
                        <h6 class="mb-0 fw-bold"><i class='bx bx-user'></i> Thông Tin Khách Hàng</h6>
                    </div>
                    <div class="card-body">
                        <h6 class="fw-bold">@Model.MaKhNavigation.TenKh</h6>
                        <p class="mb-1 text-muted"><i class='bx bx-envelope'></i> @Model.MaKhNavigation.Email</p>
                        <p class="mb-0 text-muted"><i class='bx bx-phone'></i> @Model.MaKhNavigation.Phone</p>
                    </div>
                </div>

                <!-- Shipping Info -->
                <div class="card border-0 shadow-sm rounded-3 mb-4">
                    <div class="card-header bg-white border-bottom py-3">
                        <h6 class="mb-0 fw-bold"><i class='bx bx-map'></i> Địa Chỉ Giao Hàng</h6>
                    </div>
                    <div class="card-body">
                        <p class="mb-0 text-muted">
                            @Model.MaKhNavigation.Diachi
                        </p>
                    </div>
                </div>

                <!-- Payment Info -->
                <div class="card border-0 shadow-sm rounded-3 mb-4">
                    <div class="card-header bg-white border-bottom py-3">
                        <h6 class="mb-0 fw-bold"><i class='bx bx-credit-card'></i> Thanh Toán</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted">Phương thức:</span>
                            <span class="fw-bold">COD (Tiền mặt)</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">Trạng thái:</span>
                            @if (Model.TrangThaiHuyDon)
                            {
                                <span class="badge bg-danger">Đã hủy</span>
                            }
                            else if (Model.ThanhToan)
                            {
                                <span class="badge bg-success">Đã thanh toán</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Chưa thanh toán</span>
                            }
                        </div>
                    </div>
                </div>
                
                <!-- Note -->
                @if (!string.IsNullOrEmpty(Model.Note))
                {
                    <div class="card border-0 shadow-sm rounded-3">
                        <div class="card-header bg-white border-bottom py-3">
                            <h6 class="mb-0 fw-bold"><i class='bx bx-note'></i> Ghi Chú</h6>
                        </div>
                        <div class="card-body">
                            <p class="mb-0 text-muted fst-italic">"@Model.Note"</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>